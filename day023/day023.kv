
<Num@Button>:
    font_size: 25
    bold: True
<Col@GridLayout>:
    cols: 4

<Calc>:
    rows: 2
    GridLayout:
        size_hint_y: None
        height: '100dp'
        rows: 2
        multiline: False
        TextInput:
            text: ''
            id: tx
            font_size: 50
        # Label:
        #     text: 'fff'
        #     background_color: 1, 0, 0, 1
    GridLayout:
        rows: 5
        # spacing: 10
        # padding: 10
        background_color: 1,0,0,1
        Col:
            spacing: 10
            padding: 10
            Num:
                text: '7'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '8'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '9'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '+'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
        Col:
            spacing: 10
            padding: 10
            Num:
                text: '4'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '5'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '6'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '-'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
        Col:
            spacing: 10
            padding: 10
            Num:
                text: '1'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '2'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '3'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '*'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
        Col:
            spacing: 10
            padding: 10
            Num:
                text: 'AC'
                on_press: tx.text = ''
            Num:
                text: '0'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '.'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
            Num:
                text: '/'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
        Col:
            spacing: 10
            padding: 10
            Num:
                text: '('
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
                size_hint_x: 10
            Num:
                text: ')'
                on_press: root.pressed(self.text)
                # on_press: tx.text += self.text
                size_hint_x: 10
            Num:
                text: '='
                on_press: root.calculation(tx.text)
                size_hint_x: 20